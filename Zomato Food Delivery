    <!-- Quiz Section -->
    <section id="quiz">
        <h2>What's Your Favorite Cuisine?</h2>
        <p>Choose one of the following cuisines to help us recommend the perfect dish for you!</p>
        <button class="button" onclick="checkAnswer('Italian')">Italian</button>
        <button class="button" onclick="checkAnswer('Indian')">Indian</button>
        <button class="button" onclick="checkAnswer('Chinese')">Chinese</button>
        <button class="button" onclick="checkAnswer('Mexican')">Mexican</button>

        <p class="results" id="quiz-result"></p>
    </section>

    <!-- Joke Section -->
    <section id="joke">
        <h2>Need a Laugh?</h2>
        <button class="button" onclick="fetchJoke()">Get a Joke</button>
        <p id="joke-text">Click the button for a random joke!</p>
    </section>

    <script>
        // Function to show the selected section and hide the others
        function showSection(sectionId) {
            // Hide all sections
            const sections = document.querySelectorAll('section');
            sections.forEach(section => section.style.display = 'none');
            
            // Show the selected section
            const selectedSection = document.getElementById(sectionId);
            selectedSection.style.display = 'block';
        }

        // Quiz logic
        function checkAnswer(cuisine) {
            let result = document.getElementById('quiz-result');
            let description = '';
            switch (cuisine) {
                case 'Italian':
                    description = "You must love Italian cuisine! Pizza and pasta are the staples of this cuisine.";
                    break;
                case 'Indian':
                    description = "Indian food is known for its rich flavors and spices. How about trying a Biryani?";
                    break;
                case 'Chinese':
                    description = "Chinese food brings together a mix of flavors from sweet to salty. Try some tasty Dim Sum!";
                    break;
                case 'Mexican':
                    description = "Mexican cuisine is full of bold flavors with tacos, burritos, and more!";
                    break;
                default:
                    description = "Please choose a cuisine!";
            }
            result.textContent = description;
        }

        // Fetch a random joke from an API
        async function fetchJoke() {
            const jokeApi = "https://official-joke-api.appspot.com/random_joke";
            const response = await fetch(jokeApi);
            const data = await response.json();
            const jokeText = document.getElementById('joke-text');
            jokeText.innerHTML = `${data.setup} <br><strong>${data.punchline}</strong>`;
        }

        // Show the home section by default
        window.onload = function() {
            showSection('home');
        };
    </script>

</body>
